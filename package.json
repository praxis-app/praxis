{
  "name": "praxis",
  "author": "Praxis Project",
  "description": "Social networking platform built with Vite and NestJS",
  "license": "GPL-3.0",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "build:client": "vite build view",
    "copy:assets": "cp -r src/images/assets dist/images",
    "format": "prettier --write \"{src,view}/**/*.{ts,tsx}\" --log-level silent",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:client": "vite view",
    "start:prod": "node dist/main",
    "generate": "graphql-codegen && npm run format",
    "lint": "eslint \"{src,view,apps,libs,test}/**/*.{ts,tsx}\"",
    "types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "typeorm-ts-node-esm",
    "typeorm:gen": "npm run typeorm migration:generate -- -d ./src/database/data-source.ts",
    "typeorm:run": "npm run typeorm migration:run -- -d ./dist/database/data-source.js"
  },
  "dependencies": {
    "@apollo/client": "^3.8.3",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.9",
    "@mui/material": "^5.14.9",
    "@mui/x-date-pickers": "^6.14.0",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "apollo-upload-client": "^17.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "crypto-random-string": "^3.3.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "formik": "^2.4.5",
    "formik-mui": "^5.0.0-alpha.0",
    "graphql": "^16.8.0",
    "graphql-middleware": "^6.1.35",
    "graphql-shield": "^7.6.5",
    "graphql-upload-ts": "^2.1.0",
    "humanize-duration": "^3.30.0",
    "i18next": "^21.6.7",
    "immer": "^10.0.2",
    "jsonwebtoken": "^9.0.2",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.15.3",
    "react-lazy-load-image-component": "^1.6.0",
    "react-router-dom": "^6.16.0",
    "react-scroll": "^1.8.9",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript-react-apollo": "^4.0.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/apollo-upload-client": "^17.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.17",
    "@types/graphql-upload": "^8.0.12",
    "@types/humanize-duration": "^3.27.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/react": "^18.2.21",
    "@types/react-color": "^3.0.7",
    "@types/react-dom": "^18.2.7",
    "@types/react-lazy-load-image-component": "^1.6.1",
    "@types/react-scroll": "^1.8.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "vite": "^4.4.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
